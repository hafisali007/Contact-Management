@model IEnumerable<ContactManagement.Models.Contact>

@{
    ViewData["Title"] = "Contact List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts {
    <script>
        function DeleteConfirm() {
            if (confirm("Are you sure want to delete record"))
                return true;
            else
                return false;
        }
    </script>
}

@{ int rowNo = 0; }

<div class="container">
    <h2>Contact List</h2>
    <br />
    <div style="width:90%; margin:0 auto;">
        <p>
            <a class="btn btn-primary btn-sm text-white" href="@(Url.Action("Create", "Contact"))">Create New</a>
        </p>
        <table id="example" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead align="center">
                <tr>
                    <th>Row No</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Phone No</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody align="center">
                @foreach (var item in Model)
                {
                    <tr class="col-sm-12">
                        <td>
                            @(rowNo += 1)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" href="@Url.Action("Update", "Contact", new {id=@item.Id})" class="btn btn-success btn-sm text-white">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" onclick="return DeleteConfirm()" href="@Url.Action("Delete", "Contact", new {id=@item.Id})" class="btn btn-danger btn-sm text-white">Delete</a>
                            @*<a asp-action="Status" asp-route-id="@item.Id" class="btn btn-secondary btn-sm text-white">Status</a>*@
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


